{
    "id": "photoelectric_sensor_end",
    "name": "Photoelectric Sensor System (End of belt)",
    "description": "Checks if an object is placed on the end of the belt and informs the robotic arm system.",
    "version": "1.0.0",
    "specVersion": "0.8",
    "events": [
      {
        "name": "unload",
        "source": "sensor-end",
        "type": "unload",
        "kind": "produced"
      },
      {
        "name": "job-done",
        "source": "sensor-end",
        "type": "job-done"
      }
    ],
    "functions": [
      {
        "name": "set-job-done",
        "operation": ".jobDone = true | .jobDone",
        "type": "expression"
      },
      {
        "name": "service-beam-detection",
        "type": "custom",
        "operation": "rest:get:http://localhost:8000/beamDetectionEnd"
      }
    ],
    "start": "starting",
    "states": [
      {
        "name": "starting",
        "type": "inject",
        "data": {
          "jobDone": false,
          "isBeamInterrupted": true
        },
        "transition": "timeout-or-job-done"
      },
      {
        "name": "timeout-or-job-done",
        "type": "event",
        "timeouts": {
          "eventTimeout": "PT1S"
        },
        "onEvents": [
          {
            "actions": [
                {
                    "name": "action-set-job-done",
                    "actionDataFilter": {
                        "fromStateData": "${ .jobDone }",
                        "toStateData": "${ .jobDone }"
                    },
                    "functionRef": {
                        "refName": "set-job-done"
                    }
                }
            ],
            "eventRefs": [
                "job-done"
            ],
            "eventDataFilter": {}
        }
        ],
        "transition": "done-switch"
      },
      {
        "name": "done-switch",
        "type": "switch",
        "dataConditions": [
            {
                "name": "case-done",
                "end": true,
                "condition": "${ .jobDone }"
            }
        ],
        "defaultCondition": {
            "transition": "scanning"
        }
    },
      {
        "name": "scanning",
        "type": "operation",
        "actions": [
          {
            "name": "action-beam-detection",
            "actionDataFilter": {
                "fromStateData": "${ {} }",
                "results": "${ .isBeamInterrupted }",
                "toStateData": "${ .isBeamInterrupted }"
            },
            "functionRef": {
                "refName": "service-beam-detection",
                "arguments": {},
                "invoke": "sync"
            }
          }
        ],
        "transition": "scanning-switch"
      },
      {
        "name": "scanning-switch",
        "type": "switch",
        "dataConditions": [
          {
            "name": "case-done",
            "transition": {
              "nextState": "timeout-or-job-done",
              "produceEvents": [
                {
                  "eventRef": "unload"
                }
              ]
            },
            "condition": "${ .isBeamInterrupted }"
          }
        ],
        "defaultCondition": {
          "transition": "timeout-or-job-done"
        }
      }
    ]
  }