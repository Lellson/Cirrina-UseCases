{
    "id": "conveyor_belt",
    "name": "Conveyor Belt System",
    "description": "Moves products",
    "version": "1.0.0",
    "specVersion": "0.8",
    "start": "loading",
    "events": [
        {
            "name": "object-valid",
            "source": "belt",
            "type": "object-valid"
        },
        {
            "name": "object-invalid",
            "source": "belt",
            "type": "object-invalid"
        },
        {
            "name": "unload",
            "source": "belt",
            "type": "unload"
        },
        {
            "name": "do-pick-up",
            "source": "belt",
            "type": "do-pick-up",
            "kind": "produced"
        },
        {
            "name": "picked-up",
            "source": "belt",
            "type": "picked-up"
        },
        {
            "name": "job-done",
            "source": "belt",
            "type": "job-done"
        }
    ],
    "functions": [
        {
            "name": "set-job-done",
            "operation": ".jobDone = true | .jobDone",
            "type": "expression"
        },
        {
            "name": "set-object-valid",
            "operation": ".validObject = true | .validObject",
            "type": "expression"
        },
        {
            "name": "set-object-invalid",
            "operation": ".validObject = false | .validObject",
            "type": "expression"
        },
        {
            "name": "service-move-belt",
            "type": "custom",
            "operation": "rest:get:http://localhost:8000/moveBelt"
        },
        {
            "name": "service-stop-belt",
            "type": "custom",
            "operation": "rest:get:http://localhost:8000/stopBelt"
        }
    ],
    "states": [
        {
            "name": "loading",
            "type": "inject",
            "data": {
                "validObject": false,
                "jobDone": false
            },
            "transition": "loading-event"
        },
        {
            "name": "loading-event",
            "type": "event",
            "onEvents": [
                {
                    "actions": [
                        {
                            "name": "action-set-job-done",
                            "actionDataFilter": {
                                "toStateData": "${ .jobDone }"
                            },
                            "functionRef": {
                                "refName": "set-job-done"
                            }
                        }
                    ],
                    "eventRefs": [
                        "job-done"
                    ],
                    "eventDataFilter": {}
                },
                {
                    "actions": [
                        {
                            "name": "action-set-object-valid",
                            "actionDataFilter": {
                                "toStateData": "${ .validObject }"
                            },
                            "functionRef": {
                                "refName": "set-object-valid"
                            }
                        },
                        {
                            "name": "action-move-belt",
                            "actionDataFilter": {
                                "fromStateData": "${ {} }",
                                "useResults": false
                            },
                            "functionRef": {
                                "refName": "service-move-belt",
                                "arguments": {},
                                "invoke": "sync"
                            }
                        }
                    ],
                    "eventRefs": [
                        "object-valid"
                    ],
                    "eventDataFilter": {}
                },
                {
                    "actions": [
                        {
                            "name": "action-set-object-invalid",
                            "actionDataFilter": {
                                "toStateData": "${ .validObject }"
                            },
                            "functionRef": {
                                "refName": "set-object-invalid"
                            }
                        }
                    ],
                    "eventRefs": [
                        "object-invalid"
                    ],
                    "eventDataFilter": {}
                }
            ],
            "transition": "valid-or-done-switch"
        },
        {
            "name": "valid-or-done-switch",
            "type": "switch",
            "dataConditions": [
                {
                    "name": "case-done",
                    "end": true,
                    "condition": "${ .jobDone }"
                },
                {
                    "name": "case-invalid",
                    "transition": "error",
                    "condition": "${ .validObject == false }"
                }
            ],
            "defaultCondition": {
                "transition": "transporting"
            }
        },
        {
            "name": "error",
            "type": "event",
            "onEvents": [
                {
                    "actions": [
                        {
                            "name": "action-set-job-done",
                            "actionDataFilter": {
                                "toStateData": "${ .jobDone }"
                            },
                            "functionRef": {
                                "refName": "set-job-done"
                            }
                        }
                    ],
                    "eventRefs": [
                        "job-done"
                    ],
                    "eventDataFilter": {}
                },
                {
                    "actions": [
                        {
                            "name": "action-set-object-valid",
                            "actionDataFilter": {
                                "toStateData": "${ .validObject }"
                            },
                            "functionRef": {
                                "refName": "set-object-valid"
                            }
                        },
                        {
                            "name": "action-move-belt",
                            "actionDataFilter": {
                                "fromStateData": "${ {} }",
                                "useResults": false
                            },
                            "functionRef": {
                                "refName": "service-move-belt",
                                "arguments": {},
                                "invoke": "sync"
                            }
                        }
                    ],
                    "eventRefs": [
                        "object-valid"
                    ],
                    "eventDataFilter": {}
                }
            ],
            "transition": "transporting-or-done-switch"
        },
        {
            "name": "transporting-or-done-switch",
            "type": "switch",
            "dataConditions": [
              {
                "name": "case-jobDone2",
                "end": true,
                "condition": "${ .jobDone }"
              }
            ],
            "defaultCondition": {
              "transition": "transporting"
            }
        },
        {
            "name": "transporting",
            "type": "event",
            "onEvents": [
                {
                    "actions": [
                        {
                            "name": "action-set-job-done",
                            "actionDataFilter": {
                                "toStateData": "${ .jobDone }"
                            },
                            "functionRef": {
                                "refName": "set-job-done"
                            }
                        }
                    ],
                    "eventRefs": [
                        "job-done"
                    ],
                    "eventDataFilter": {}
                },
                {
                    "actions": [
                        {
                            "name": "action-stop-belt",
                            "actionDataFilter": {
                                "fromStateData": "${ {} }",
                                "useResults": false
                            },
                            "functionRef": {
                                "refName": "service-stop-belt",
                                "arguments": {},
                                "invoke": "sync"
                            }
                        }
                    ],
                    "eventRefs": [
                        "unload"
                    ],
                    "eventDataFilter": {}
                }
            ],
            "transition": {
                "nextState": "unloading-or-done-switch",
                "produceEvents": [
                    {
                        "eventRef": "do-pick-up"
                    }
                ]
            }
        },
        {
            "name": "unloading-or-done-switch",
            "type": "switch",
            "dataConditions": [
              {
                "name": "case-jobDone3",
                "end": true,
                "condition": "${ .jobDone }"
              }
            ],
            "defaultCondition": {
              "transition": "unloading"
            }
        },
        {
            "name": "unloading",
            "type": "event",
            "onEvents": [
                {
                    "actions": [],
                    "eventRefs": [
                        "picked-up"
                    ],
                    "eventDataFilter": {}
                }
            ],
            "transition": "loading-event"
        }
    ]
}