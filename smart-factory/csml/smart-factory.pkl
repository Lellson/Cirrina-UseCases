import "CollaborativeStateMachineDescription.pkl" as CSM

// Only render the CSM Object
output {
    value = csm
}

// ------------------------ Service Types -------------------------------
const hidden stMoveBelt = "moveBelt"
const hidden stStopBelt = "stopBelt"
const hidden stTakePhoto = "takePhoto"
const hidden stScanPhoto = "scanPhoto"
const hidden stBeamDetectionStart = "beamDetectionStart"
const hidden stBeamDetectionEnd = "beamDetectionEnd"
const hidden stPickup = "pickUp"
const hidden stAssemble = "assemble"
const hidden stReturnToStart = "returnToStart"
const hidden stSendEmail = "sendMail"
const hidden stSendSms = "sendSms"
const hidden stSendStatistics = "sendStatistics"

// ------------------------ Events (Global) -------------------------------
const hidden eObjectValid = "eObjectValid"
const hidden eObjectInvalid = "eObjectInvalid"
const hidden eStartScan = "eStartScan"
const hidden eProductComplete = "eProductComplete"
const hidden eProcessMessage = "eProcessMessage"
const hidden eJobDone = "eJobDone"
const hidden eScanned = "eScanned"
const hidden eArmPickup = "eArmPickup"
const hidden ePickedUp = "ePickedUp"
const hidden eAssembleComplete = "eAssembleComplete"

// ------------------------ Variables (Persistent) -------------------------------
const hidden vProductsCompleted = "productsCompleted"
const hidden vJobDone = "jobDone"
const hidden vLog = "log"

// ------------------------ Timeouts -------------------------------
const hidden tBeamDetection = "100"
const hidden tPickUp = "1000"
const hidden tRetry = "10000"

// ------------------------ CSM -------------------------------
csm: CSM = new {
    name = "Smart Factory"
    version = "0.1"
    stateMachines {
        jobControlSystem
        conveyorBeltSystem
        roboticArmSystem
        eMailProcessor
        smsProcessor
        logProcessor
        monitoringSystem
    }
    persistentContext {
        variables {
            new {
                name = vProductsCompleted
                value = "0"
            }
            new {
                name = vJobDone
                value = "false"
            }
            new {
                name = vLog
                value = "[...]"
            }
        }
    }
}

// ------------------------ Job Control System -------------------------------
const hidden jobControlSystem: CSM.StateMachineDescription = new {
    name = "jobControlSystem"
    localContext {
        variables {
            new {
                name = "totalProducts"
                value = "1"
            }
        }
    }
    states {
        jobControlSystem_starting
        jobControlSystem_running
        jobControlSystem_jobDone
    }
}

const hidden jobControlSystem_starting: CSM.StateDescription = new {
    name = "starting"
    initial = true
    entry {
        new CSM.MatchActionDescription {
            value = vProductsCompleted + " >= totalProducts || " + vJobDone
            cases {
                new {
                    `case` = "true"
                    action = new CSM.AssignActionDescription {
                        variable {
                            name = "productsCompleted"
                            value = "0"
                        }
                    }
                }
            }
        }
        new CSM.AssignActionDescription {
            variable {
                name = vJobDone
                value = "false"
            }
        }
        new CSM.RaiseActionDescription {
            event {
                name = eProcessMessage
                data {
                    new {
                        name = "msg"
                        value = "'Job started. Producing ' + totalProducts + ' products.'"
                    }
                }
                channel = "global"
            }
        }
    }
    always {
        new {
            target = jobControlSystem_running.name
        }
    }
}

const hidden jobControlSystem_running: CSM.StateDescription = new {
    name = "running"
    on {
        new {
            event = eProductComplete
            actions {
                new CSM.AssignActionDescription {
                    variable {
                        name = vProductsCompleted
                        value = vProductsCompleted + " + 1"
                    }
                }
                new CSM.RaiseActionDescription {
                    event {
                        name = "eCheckJobDone"
                        channel = "internal"
                    }
                }
            }
        }
        new {
            event = "eCheckJobDone"
            target = jobControlSystem_jobDone.name
            guards {
                new CSM.GuardDescription {
                    expression = vProductsCompleted + " >= totalProducts"
                }
            }
        }
    }
}

const hidden jobControlSystem_jobDone: CSM.StateDescription = new {
    name = "jobDone"
    terminal = true
    entry {
        new CSM.AssignActionDescription {
            variable {
                name = vJobDone
                value = "true"
            }
        }
        new CSM.RaiseActionDescription {
            event {
                name = eProcessMessage
                data {
                    new {
                        name = "msg"
                        value = "'Job done! Produced ' + productsCompleted + ' products.'"
                    }
                }
                channel = "global"
            }
        }
        new CSM.RaiseActionDescription {
            event {
                name = eJobDone
                channel = "global"
            }
        }
    }
}

// ------------------------ Conveyor Belt System -------------------------------
