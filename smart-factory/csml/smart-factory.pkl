const hidden cameraSensorSystem_scanning: CSM.StateDescription = new {
    name = "scanning"
    entry {
        new CSM.InvokeActionDescription {
            serviceType = stTakePhoto
            output {
                new {
                    reference = "photoPath"
                }
            }
        }
        new CSM.InvokeActionDescription {
            serviceType = stScanPhoto
            input {
                new {
                    name = "photoPath"
                    value = "photoPath"
                }
            }
            output {
                new {
                    reference = "validObject"
                }
            }
            done {
                new {
                    name = "eCheckValidObject"
                    channel = "internal"
                }
            }
        }
    }
    exit {
        new CSM.AssignActionDescription {
