{
    "localData": {},
    "bindEventInstanceIds": [],
    "collaborativeStateMachine": {
        "version": "0.1",
        "name": "Surveillance System",
        "stateMachines": [
            {
                "name": "detector",
                "localContext": {
                    "variables": [
                        {
                            "name": "image",
                            "value": "''"
                        },
                        {
                            "name": "hasDetectedPersons",
                            "value": "false"
                        }
                    ]
                },
                "states": [
                    {
                        "name": "capturing",
                        "initial": true,
                        "entry": [
                            {
                                "type": "invoke",
                                "serviceType": "cameraCapture",
                                "isLocal": false,
                                "input": [
                                    {
                                        "name": "cameraId",
                                        "value": "0"
                                    }
                                ],
                                "output": [
                                    {
                                        "reference": "image"
                                    }
                                ],
                                "done": [
                                    {
                                        "name": "captured",
                                        "channel": "internal"
                                    }
                                ]
                            }
                        ],
                        "on": [
                            {
                                "event": "captured",
                                "target": "processing"
                            }
                        ]
                    },
                    {
                        "name": "processing",
                        "entry": [
                            {
                                "type": "invoke",
                                "serviceType": "detectPersons",
                                "isLocal": true,
                                "input": [
                                    {
                                        "name": "image",
                                        "value": "image"
                                    }
                                ],
                                "output": [
                                    {
                                        "reference": "hasDetectedPersons"
                                    }
                                ],
                                "done": [
                                    {
                                        "name": "detectedPersons",
                                        "channel": "internal"
                                    }
                                ]
                            }
                        ],
                        "on": [
                            {
                                "event": "detectedPersons",
                                "guards": [
                                    {
                                        "expression": "hasDetectedPersons == true"
                                    }
                                ],
                                "actions": [
                                    {
                                        "type": "raise",
                                        "event": {
                                            "name": "foundPersons",
                                            "channel": "global",
                                            "data": [
                                                {
                                                    "name": "image",
                                                    "value": "image"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            },
                            {
                                "event": "timeout",
                                "target": "capturing"
                            },
                            {
                                "event": "alarm",
                                "target": "alarm"
                            }
                        ],
                        "after": [
                            {
                                "type": "timeout",
                                "name": "captureTimeout",
                                "delay": "500",
                                "action": {
                                    "type": "raise",
                                    "event": {
                                        "name": "timeout",
                                        "channel": "internal"
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "name": "alarm",
                        "entry": [
                            {
                                "type": "invoke",
                                "serviceType": "alarmOn",
                                "isLocal": false
                            }
                        ],
                        "exit": [
                            {
                                "type": "invoke",
                                "serviceType": "alarmOff",
                                "isLocal": false
                            }
                        ],
                        "on": [
                            {
                                "event": "disarm",
                                "target": "capturing"
                            }
                        ]
                    }
                ]
            },
            {
                "name": "surveillance",
                "localContext": {
                    "variables": [
                        {
                            "name": "hasThreat",
                            "value": "false"
                        }
                    ]
                },
                "states": [
                    {
                        "name": "processing",
                        "initial": true,
                        "on": [
                            {
                                "event": "foundPersons",
                                "actions": [
                                    {
                                        "type": "invoke",
                                        "serviceType": "analyze",
                                        "isLocal": false,
                                        "input": [
                                            {
                                                "name": "image",
                                                "value": "$image"
                                            }
                                        ],
                                        "output": [
                                            {
                                                "reference": "hasThreat"
                                            }
                                        ],
                                        "done": [
                                            {
                                                "name": "analyzed",
                                                "channel": "internal"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "event": "analyzed",
                                "guards": [
                                    {
                                        "expression": "hasThreat == true"
                                    }
                                ],
                                "actions": [
                                    {
                                        "type": "raise",
                                        "event": {
                                            "name": "alarm",
                                            "channel": "global"
                                        }
                                    }
                                ]
                            },
                            {
                                "event": "alarm",
                                "target": "alarm"
                            }
                        ]
                    },
                    {
                        "name": "alarm",
                        "on": [
                            {
                                "event": "disarm",
                                "target": "processing"
                            }
                        ],
                        "after": [
                            {
                                "type": "timeout",
                                "name": "disarmTimeout",
                                "delay": "10000",
                                "action": {
                                    "type": "raise",
                                    "event": {
                                        "name": "disarm",
                                        "channel": "global"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "stateMachineName": "surveillance",
    "serviceImplementations": [
        {
            "type": "HTTP",
            "scheme": "http",
            "host": "node1.site1.grid5000.fr",
            "port": 8001,
            "endPoint": "/capture",
            "method": "POST",
            "name": "cameraCapture",
            "cost": 1.0,
            "local": false
        },
        {
            "type": "HTTP",
            "scheme": "http",
            "host": "node1.site1.grid5000.fr",
            "port": 8001,
            "endPoint": "/alarm/on",
            "method": "POST",
            "name": "alarmOn",
            "cost": 1.0,
            "local": false
        },
        {
            "type": "HTTP",
            "scheme": "http",
            "host": "node1.site1.grid5000.fr",
            "port": 8001,
            "endPoint": "/alarm/off",
            "method": "POST",
            "name": "alarmOff",
            "cost": 1.0,
            "local": false
        },
        {
            "type": "HTTP",
            "scheme": "http",
            "host": "node3.site1.grid5000.fr",
            "port": 8002,
            "endPoint": "/detect",
            "method": "POST",
            "name": "detectPersons",
            "cost": 1.0,
            "local": true
        },
        {
            "type": "HTTP",
            "scheme": "http",
            "host": "node4.site3.grid5000.fr",
            "port": 8003,
            "endPoint": "/analyze",
            "method": "POST",
            "name": "analyze",
            "cost": 1.0,
            "local": false
        }
    ],
    "runtimeName": "runtime1"
}