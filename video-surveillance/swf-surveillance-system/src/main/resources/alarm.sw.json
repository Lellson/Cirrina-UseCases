{
    "id": "alarm",
    "name": "Alarm",
    "description": "Workflow",
    "version": "1.0.0",
    "specVersion": "0.8",
    "events": [
        {
            "name": "alarm",
            "source": "surveillance",
            "type": "alarm"
        }
    ],
    "functions": [
        {
            "name": "service-alarm-on",
            "type": "custom",
            "operation": "rest:post:http://localhost:8001/alarm/on"
        },
        {
            "name": "service-alarm-off",
            "type": "custom",
            "operation": "rest:post:http://localhost:8001/alarm/off"
        }
    ],
    "start": "start",
    "states": [
        {
            "name": "start",
            "type": "inject",
            "data": {
                "terminate": false
            },
            "transition": "check-alarm-event"
        },
        {
            "name": "check-alarm-event",
            "type": "event",
            "onEvents": [
                {
                    "eventRefs": [
                        "alarm"
                    ]
                }
            ],
            "transition": "alarm-switch"
        },
        {
            "name": "alarm-switch",
            "type": "switch",
            "dataConditions": [
                {
                    "name": "case-terminate",
                    "end": true,
                    "condition": "${ .terminate == true }"
                }
            ],
            "defaultCondition": {
                "transition": "alarm-on-invoke"
            }
        },
        {
            "name": "alarm-on-invoke",
            "type": "operation",
            "timeouts": {
                "actionExecTimeout": "PT30S"
            },
            "actions": [
                {
                    "name": "action-alarm-on",
                    "actionDataFilter": {
                        "fromStateData": "${ {} }"
                    },
                    "functionRef": {
                        "refName": "service-alarm-on",
                        "invoke": "sync"
                    }
                }
            ],
            "transition": "alarm-wait"
        },
        {
            "name": "alarm-wait",
            "type": "sleep",
            "duration": "PT10S",
            "transition": "alarm-off-invoke"
        },
        {
            "name": "alarm-off-invoke",
            "type": "operation",
            "timeouts": {
                "actionExecTimeout": "PT30S"
            },
            "actions": [
                {
                    "name": "action-alarm-off",
                    "actionDataFilter": {
                        "fromStateData": "${ {} }"
                    },
                    "functionRef": {
                        "refName": "service-alarm-off",
                        "invoke": "sync"
                    }
                }
            ],
            "transition": "check-alarm-event"
        }
    ]
}