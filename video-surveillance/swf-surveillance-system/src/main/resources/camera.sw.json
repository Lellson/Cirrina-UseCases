{
  "id": "wCamera",
  "version": "0.1",
  "specVersion": "0.8",
  "name": "Camera Workflow",
  "description": "Workflow description",
  "start": "sSleep",
  "functions": [
    {
      "name": "iCameraCapture",
      "operation": "specs/services.json#serviceCameraCapture",
      "type": "rest"
    }
  ],
  "events": [
    {
      "name": "eCheckIfPersonsInImage",
      "source": "http://localhost:8080",
      "type": "externalEventCheckIfPersonsInImage",
      "kind": "produced"
    }
  ],
  "states": [
    {
      "name": "sStartState",
      "type": "inject",
      "data": {
        "terminateCondition": false
      },
      "transition": "sSleep",
      "end": false
    },
    {
      "name": "continue-switch",
      "type": "switch",
      "dataConditions": [
        {
          "name": "cTerminate",
          "end": true,
          "condition": "${ .terminateCondition }"
        }
      ],
      "defaultCondition": {
        "transition": "sSleep"
      }
    },
    {
      "name": "sSleep",
      "type": "sleep",
      "duration": "PT10S",
      "transition": "sInvokeCameraCapture"
    },
    {
      "name": "sInvokeCameraCapture",
      "type": "operation",
      "actions": [
        {
          "name": "aInvokeCameraCapture",
          "functionRef": {
            "refName": "iCameraCapture"
          }
        }
      ],
      "transition": {
        "nextState": "sStartState",
        "produceEvents": [
          {
            "eventRef": "eCheckIfPersonsInImage"
          }
        ]
      },
      "end": false
    }
  ]
}
